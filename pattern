#include <iostream>
using namespace std;

int main()
{
    int n;
    cin>>n;
    cout<<endl;
    
    for(int i=n;i>=1;i--)
    {
        int j=i,l=i;
        
        while(j)
        {
            cout<<"*";
            j--;
        }
        
        for(int k=1;k<=2*n-i*2;k++)
        {
            cout<<" ";
        }
        while(l)
        {
            cout<<"*";
            l--;
        }
        cout<<endl;
    }
    
    for(int i=1;i<=n;i++)
    {
        int j=i,l=i;
        
        while(j)
        {
            cout<<"*";
            j--;
        }
        
        for(int k=1;k<=2*n-i*2;k++)
        {
            cout<<" ";
        }
        while(l)
        {
            cout<<"*";
            l--;
        }
        cout<<endl;
    }


    return 0;
}
